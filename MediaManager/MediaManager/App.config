<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="MediaTypes" 
             type="MediaManager.Models.Configuration.MediaTypeSection, MediaManager.Models" 
             allowDefinition="Everywhere" 
             requirePermission="false"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <MediaTypes>
    <Types>
      <add name="Video" extensions=".avi,.wmv,.mp4,.flv" />
      <add name="Audio" extensions=".mp3,.wav" />
    </Types>
  </MediaTypes>
</configuration>